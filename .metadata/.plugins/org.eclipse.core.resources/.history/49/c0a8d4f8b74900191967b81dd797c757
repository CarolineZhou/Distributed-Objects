import java.util.Scanner;

public class ObjectCreator {
	private Scanner input = new Scanner(System.in);
	
	public void displayObjectSelections(int currentObjectNumber) {
		System.out.println("OBJECT #" + currentObjectNumber);
		if(currentObjectNumber != 1)
		{
			System.out.println("Would you like to create another object?");
		}
		System.out.println("Please choose an object");
		System.out.println("1) Library Object");
		System.out.println("2) Book Object");
		System.out.println("3) Owner Object");
		
	}
}
