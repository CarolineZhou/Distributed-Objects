import static java.lang.System.out;

import org.jdom2.*;
import java.lang.reflect.*;
import java.util.*;
public class Deserializer {
	Class currentClass;
	Object currentObject;
	Element currentRoot;
	Element classHolder;
	HashMap<Integer,Object> hashMap = new HashMap<Integer,Object>();

	public Deserializer(Document doc) throws NoSuchMethodException, SecurityException {
		currentRoot = doc.getRootElement();
		List<Element> elements = currentRoot.getChildren();
		
		//get the class of the object
		for(int i = 0; i < elements.size(); i++)
		{
			classHolder = elements.get(i);
			Attribute attr = classHolder.getAttribute("class");
			String attrName = classHolder.getAttributeValue(attr.getName());
			System.out.println("Attribute: "+ attr);
			System.out.println("Attribute name: " + attrName);
			
			
		}
		
			
	}
	
}
